@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@model NoteWriter.Models.NoteModel

<h4 class="text-center mt-5">Create Note</h4>
<hr />
<div class="row justify-content-md-center">
    <div class="col-md-3">

        <form asp-action="Create" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Text" class="control-label"></label>
                <input asp-for="Text" class="form-control" />
            </div>
            <div class="form-group mt-3 d-flex justify-content-between align-items-center">
                <input type="submit" value="Create" class="button-style" />
                <a asp-action="Index" asp-controller="Home"  class="button-style">Back to List</a>
            </div>

            <label asp-for="UserId" hidden></label>
            <input type="text" value="0" hidden asp-for="UserId"/>
        </form>

    </div>
</div>

@section Scripts 
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}